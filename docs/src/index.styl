@import './fonts'

*
  box-sizing border-box

html
  font-size 10px
  height 100%

body
  display flex
  flex-direction column
  font-size 1.6rem
  margin 0
  min-height 100%
  background-image linear-gradient(#ccc, #eee)
  background-position top center
  background-repeat repeat-x
  background-color #eee

p
  font-size 1.6rem
  line-height 2.2rem

#app,
#router
  display flex
  flex-direction column
  flex 1 1 0
  min-height 0
